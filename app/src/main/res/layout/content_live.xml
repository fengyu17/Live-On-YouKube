<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.geeya.wifitv.ui.activity.LiveActivity"
    tools:showIn="@layout/activity_live">

    <android.support.design.widget.TabLayout
        android:id="@+id/live_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/colorRed"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/colorRed" />

    <android.support.v4.view.ViewPager
        android:id="@+id/live_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <!--
        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_liverv_channel"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    -->
</LinearLayout>
