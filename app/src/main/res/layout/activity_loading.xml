<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.geeya.wifitv.ui.activity.LoadingActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loading_tv_appname"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Live on\n YouKube"
        android:textColor="@color/colorAccent"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/loading_tv_appname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Please wait while the experiences are loading..."
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />

</RelativeLayout>
